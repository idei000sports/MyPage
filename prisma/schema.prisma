generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}



model notes {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
}

model Origin {
  id          Int      @id @default(autoincrement())
  name        String
  county_id   Int
  formation   Int
  dissolution Int
  genres      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name])
}

model County {
  id        Int    @id @default(autoincrement())
  country   String
  state     String
  county    String
  lattitude Float
  longitude Float

  @@unique([country, state, county])
}


model Words {
  id        Int    @id @default(autoincrement())
  word      String
  kana      String
  boin      String
  hinshi    String
  createdAt   DateTime @default(now())
}